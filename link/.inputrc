# support typing command and using up and down keys to search through history
"\e[A": history-search-backward
"\e[B": history-search-forward

# Use Unicode & do NOT use the "8bit hack" to input/output non-ASCII characters
# See http://code.google.com/p/iterm2/wiki/Keybindings
set input-meta on
set output-meta on
set convert-meta off

# ignore case on completion
set completion-ignore-case on

# expand the home folder
set expand-tilde on

# enable a menu
set show-all-if-ambiguous on
set menu-complete-display-prefix on
TAB: menu-complete

# don't duplicate completed text
set skip-completed-text on

# display file type on completion
set visible-stats on

#"\e[1~": beginning-of-line
#"\e[4~": end-of-line
#"\e[3~": delete-char
#"\e[2~": quoted-insert
#"\e[5C": forward-word
#"\e[5D": backward-word
#"\e\e[C": forward-word
#"\e\e[D": backward-word
